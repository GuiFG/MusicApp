@page
@model MusicAppWeb.Pages.SignInModel

<link rel="stylesheet" href="~/css/Login/signin.css">

<div class="container" data-aos="fade-down" data-aos-delay="300">
    <form method="POST" asp-action="SignIn">
        <h2 class="ml-2 text-center mb-3">Login</h2>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon mr-2"><i class="fa fa-user"></i></span>
                <input type="text" class="form-control" name="username" placeholder="Username" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon mr-2"><i class="fa fa-lock"></i></span>
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
        </div>
    
        <button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button>
    </form>    
</div>