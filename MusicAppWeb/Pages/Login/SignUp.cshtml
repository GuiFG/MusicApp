@page 
@model MusicAppWeb.Pages.SignUpModel

<link rel="stylesheet" href="~/css/Login/signup.css">

<div class="container" data-aos="fade-down" data-aos-delay="300">	
<form id="formSignUp" asp-action="SignUp" method="post">
    <h2 class="ml-2 text-center">Create Account</h2>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon mr-2"><i class="fa fa-user"></i></span>
            <input type="text" class="form-control" name="username" placeholder="Username" required="required">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon mr-2"><i class="fa fa-paper-plane"></i></span>
            <input type="email" class="form-control" name="email" placeholder="Email Address" required="required">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon mr-2"><i class="fa fa-lock"></i></span>
            <input type="password" class="form-control" name="password" placeholder="Password" required="required">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon mr-2">
                <i class="fa fa-lock"></i>
                <i class="fa fa-check"></i>
            </span>
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
        </div>
    </div>        
    <div class="form-group">
        <button id="btnSubmit" type="button" class="btn btn-primary btn-block btn-lg">Sign Up</button>
    </div>
    <p class="small text-center">By clicking the Sign Up button, you agree to our <br><a href="#">Terms &amp; Conditions</a>, and <a href="#">Privacy Policy</a>.</p>
</form>
<div class="text-center">Already have an account? <a asp-page="/Login/SignIn">Login here</a>.</div>

@section Scripts {
    <script src="~/js/Login/signup.js"></script>
}