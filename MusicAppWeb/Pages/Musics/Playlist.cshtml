@page 
@model MusicAppWeb.Pages.Musics.PlaylistModel

<link rel="stylesheet" href="~/css/Musics/playlist.css">

<div class="container" data-aos="fade-down" data-aos-duration="900">
	<form id="formPlaylist" method="post"> 
		<h2 class="ml-2 text-center mb-3">Create Playlist</h2>
		<div class="form-group">
			<div class="input-group">
				<input id="name" type="text" class="form-control" name="Name" placeholder="Name" required/>
			</div>
		</div>
		<div class="form-group">
			<select class="form-control" id="selectMusics">
				<option value="">Select</option>
				@foreach (var m in Model.Musics)
				{
					<option value="@m.Id">@m.Name</option>
				}
			</select>
			<button type="button" class="btn btn-primary btn-sm my-2" id="add"><i class="fas fa-plus mr-2"></i>Add</button>
		</div>
		<div class="form-group">
			<label class="form-label" for="musics">List of musics</label>
			<div class="input-group">
				<ul id="musics" class="list-group">
				</ul>
			</div>
		</div>
		<button type="button" id="btnSubmit" class="btn btn-dark btn-block btn-lg">Submit</button>
	</form>
</div>


<partial name="_SideBar"></partial>

@section scripts {
	<script src="~/js/Music/playlist.js"></script>
}
